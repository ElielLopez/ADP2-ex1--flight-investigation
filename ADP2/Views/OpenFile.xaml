<UserControl x:Class="ADP2.Views.OpenFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADP2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="285">
    <Grid Background="Gray" Margin="-15,0,-75,0">
        <Button x:Name="openFileButton" Content="Open File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="79" Height="27" Margin="3,4,0,0" Click="OpenFile_Click"/>
        <TextBox x:Name="fileNameTextBox" HorizontalAlignment="Left" Height="27" Margin="97,4,0,0" TextWrapping="Wrap" Text="{Binding Path=choosenFileName}" VerticalAlignment="Top" Width="75"/>
        <Button Content="Open XML" Click="OpenXMLFile_Click" HorizontalAlignment="Left" Margin="182,5,0,0" VerticalAlignment="Top" Width="74" Height="26"/>
        <TextBox x:Name="xmlFileNAmeTextBox" HorizontalAlignment="Left" Height="26" Margin="261,5,0,0" TextWrapping="Wrap" Text="{Binding Path=choosenXMLFileName}" VerticalAlignment="Top" Width="109"/>

    </Grid>
</UserControl>
